      "Authorization",
      "X-Requested-With"
    ]
  },
  "RateLimit": {
    "GlobalPermitLimit": 100,
    "GlobalWindowMinutes": 1,
    "AuthPermitLimit": 10,
    "AuthWindowMinutes": 15,
    "UserPermitLimit": 200,
    "UserWindowMinutes": 1
  },
  "Swagger": {
    "EnableInProduction": false,
    "RequireAuthentication": true
